<section class="container">
    <header>Tabla de inspección</header>
    <br>
    <div class="col d-flex justify-content-initial">
        <a href="/addInspect" class="btn btn-info" style="text-decoration: none;">
            Registrar vehiculo
        </a>
    </div>
    {{#if inspections}}
    <div class="col md-3" style="padding-top: 20px;">
        <table id="example" class="table table-hover" style="width: 100%;">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Placa</th>
                    <th>Tipo de carro</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each inspections}}
                <tr>
                    <td>
                        {{driverId}}
                    </td>
                    <td>
                        {{name}}
                    </td>
                    <td>
                        {{idLicensePlate}}
                    </td>
                    <td>
                        {{vehicleType}}
                    </td>

                    <td>
                        <div style="display: flex; justify-content: space-evenly;">
                            <a href="/edit/{{idLicensePlate}}" class="btn btn-warning"><i class="fa-solid fa-file-pen"></i></a>
                            <a href="/inspectVehiculo/{{idLicensePlate}}" class="btn btn-info"><i class="fa-solid fa-magnifying-glass-plus"></i></a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
    {{/if}}
</section>