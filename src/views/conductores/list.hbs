<div class="container">
    <div class="row mt-5">
        <h3 class="text-center uppercase p-2">Lista de conductores</h3>
        
        {{#if conductores}}
        <div class="col md-3">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>CEDULA</th>
                        <th>NOMBRE</th>
                        <th>TELEFONO</th>
                        <th>OPCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each conductores}}
                    <tr>
                        <th>{{id_conductor}}</th>
                        <th>{{nombre}}</th>
                        <th>{{telefono}}</th>
                        <th>
                            <div>
                                <a href="" class="btn btn-primary"><i
                                        class="fa-solid fa-pencil"></i></a>
                                <a href="" class="btn btn-danger"><i
                                        class="fa-solid fa-trash"></i></a>
                            </div>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="12">
                            Registro de conductores
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Crear inspeccion</h3>
            </div>
            <div class="card-body">
                <p>Presiona este boton para que puedas registrar al vehiculo</p>
                <a href="/add" class="btn btn.primary">crearlo</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>