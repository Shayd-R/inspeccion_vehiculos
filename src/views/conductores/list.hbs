<style>
    p {
        font-weight: 400;
    }
</style>
<div class="container">
    <div class="row mt-5">
        <h1 class="text-center text-light p-2">Lista de conductores</h1>
        
        {{#if drivers}}
        <div class="col md-3">
            <table class="table text-center">
                <thead>
                    <tr class="table-white">
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Celular</th>
                        <th>N° Licencia</th>
                        <th>Categoria</th>
                        <th>Fecha de vencimiento</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each drivers}}
                    <tr class="table-secondary">
                        <th><p>{{idDriver}}</p></th>
                        <th><p>{{name}}</p></th>
                        <th><p>{{cellPhoneNumber}}</p></th>
                        <th><p>{{licenseNumber}}</p></th>
                        <th><p>{{category}}</p></th>
                        <th><p>{{driversLicenseExpiration}}</p></th>
                        <th>
                            <div>
                                <a href="" class="btn btn-primary"><i
                                        class="fa-solid fa-pencil"></i>&nbsp;&nbsp; Editar</a>
                            </div>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-white">
                        <td colspan="12">
                            Registro de conductores
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Agregar conductor</h3>
            </div>
            <div class="card-body">
                <p>Presiona este boton para que puedas registrar al conductor</p>
                <a href="/addconductor" class="btn btn.primary">Registrar</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>